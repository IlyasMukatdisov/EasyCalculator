<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2000dp" android:bottomRightRadius="2000dp" android:topLeftRadius="2000dp" android:topRightRadius="2000dp" />
            <solid android:color="@color/magenta" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="2000dp" android:bottomRightRadius="2000dp" android:topLeftRadius="2000dp" android:topRightRadius="2000dp" />
            <solid android:color="@color/alpha" android:alpha="0.5" />

        </shape>
    </item>
</selector>

